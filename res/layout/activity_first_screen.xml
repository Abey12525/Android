<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/flare"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.arh.downloadmanager.firstScreen"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">


   <TextView
       android:layout_width="wrap_content"
       android:layout_height="63dp"
       android:textSize="50dp"
       android:textAlignment="center"
       android:textStyle="bold"
       android:textColor="#EAFFFFFF"
       android:text="ADM"
       app:layout_constraintBottom_toTopOf="@+id/emailid"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       android:id="@+id/textView2"
       android:layout_marginBottom="91dp"
       android:layout_above="@+id/editText"
       android:layout_centerHorizontal="true" />


    <EditText
        android:id="@+id/emailid"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/buttonshape"
        android:textColor="@color/colorAccent"
        android:textAlignment="center"
        android:hint="Username"
        app:layout_constraintBottom_toTopOf="@+id/editText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="35dp"
        android:layout_above="@+id/editText2"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:ems="10"
        android:textColor="@color/colorAccent"
        android:textAlignment="center"
        android:hint="Email"
        android:background="@drawable/buttonshape"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/editText2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="34dp"
        android:layout_above="@+id/emailid"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/buttonshape"
        android:ems="10"
        android:inputType="textVisiblePassword"
        android:hint="Password"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/submit_area"
        android:layout_marginBottom="60dp"
        android:layout_above="@+id/submit_area"
        android:layout_alignLeft="@+id/emailid"
        android:layout_alignStart="@+id/emailid" />


    <Button
        android:id="@+id/submit_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sign up"
        android:background="@drawable/buttonshape"
        android:textColor="@color/colorAccent"
        tools:layout_editor_absoluteY="426dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="77dp" />

</RelativeLayout>
